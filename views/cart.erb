<h2>Your cart</h2>

<div id="cart">

  <table class="table table-striped">
    <thead>
    	<tr>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
  	<tr>
      <td><%= item[0].title %></td>
  		<td><%= item[0].price %></td>
  		<td><%= item[1] %></td>
      <td><% price = item[0].price%>
          <% q = item[1].to_i %>
          <% total = price * q %>
          <%= total %>
      </td>
    </tr>
  	 
    <% total_price += total %>
    <% total_qty += q %>
    <% end %>

    <tr>
      <td>Total: </td>
      <td></td>
      <td><%= total_qty %></td>
      <td><%= total_price %></td>
    </tr>
  </tbody>
  </table>

  <form action="/place_order" method="POST" role="form">
    
    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" />
    <div class="form-group">
      <label>Enter your name</label>
      <input name="order[name]" type="text" class="form-control" placeholder="Your name">
    </div>

    <div class="form-group">
      <label>Enter your phone</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Your phone">
    </div>

    <div class="form-group">
      <label>Enter your address</label>
      <textarea name="order[address]" class="form-control" rows="3" placeholder="Delivery address"></textarea>
    </div>

    <button type="submit" class="btn btn-success btn-sn">Send</button>
    <button class="btn btn-danger btn-sn" onclick="return cancel_order()">Cancel</button>

  </form>

</div>
 
