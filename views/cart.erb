<h2>Your cart</h2>
<table class="table table-striped">
  <thead>
  	<tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
  
  <% @items.each do |item| %>
	<tr>
    <td><%= item[0].title %></td>
		<td><%= item[0].price %></td>
		<td><%= item[1] %></td>
    <td><% price = item[0].price.to_i %>
        <% q = item[1].to_i %>
        <% total = price * q %>
        <%= total %>
    </td>
	</tr>
	<% end %>
</tbody>
</table>

