<h2>Your cart</h2>
<table class="table table-striped">
  <thead>
  	<tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
  <% total_price = 0 %>
  <% total_qty = 0 %>
  <% @items.each do |item| %>
	<tr>
    <td><%= item[0].title %></td>
		<td><%= item[0].price %></td>
		<td><%= item[1] %></td>
    <td><% price = item[0].price%>
        <% q = item[1].to_i %>
        <% total = price * q %>
        <%= total %>
    </td>
  </tr>
	 
  <% total_price += total %>
  <% total_qty += q %>
  <% end %>

  <tr>
    <td>Total: </td>
    <td></td>
    <td><%= total_qty %></td>
    <td><%= total_price %></td>
  </tr>
</tbody>
</table>

